{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "pre-commit": {
    "enabled": true
  },
  "customManagers": [
    {
       "customType": "regex",
       "fileMatch": ["custom_components/*/manifest.json"],
       "datasourceTemplate": "pypi",
       "matchStrings": [
            "\"requirements\": \\[.*?\"(?<depName>premium-bond-checker)==(?<currentValue>\\d+\\.\\d+\\.\\d+)\".*?\\]"
       ]
    }
  ]
}
